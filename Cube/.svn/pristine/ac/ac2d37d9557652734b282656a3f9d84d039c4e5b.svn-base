#include "Player.h"



Player::Player()
{
}

Player::Player(Unit base, World<Physical> *mapa, sf::Keyboard::Key left, sf::Keyboard::Key right, sf::Keyboard::Key up, sf::Keyboard::Key down, sf::Keyboard::Key attack, sf::Keyboard::Key block, sf::Keyboard::Key kick, sf::Keyboard::Key use ) : Unit(base)
{
	this->player_left = left;
	this->player_right = right;
	this->player_up = up;
	this->player_down = down;
	this->player_attack = attack;
	this->player_block = block;
	this->player_kick = kick;
	this->player_use = use;
	this->to_go = noway;
    mapa->add_obstacle(this->ID, this);

}


Player::~Player()
{
}

